// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Case {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  image String
  alt   String
  link  String
  price Float
  items Item[]
}

model Item {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  color     String
  image     String
  condition String
  price     Float
  chance    Float

  Case   Case?   @relation(fields: [caseId], references: [id])
  caseId String? @db.ObjectId
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  steamapikey    String
  steamid        String
  personaname    String
  profileurl     String
  avatar         String
  balance        Float
  siteInventory  Json?
  steamInventory Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role   Roles?  @relation(fields: [roleId], references: [id])
  roleId String? @db.ObjectId
}

model Roles {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  user User[]
}
